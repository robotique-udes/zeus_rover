<?xml version="1.0"?>
<launch>

    <arg name="base_global_planner" default="navfn/NavfnROS"/>
    <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <remap from="cmd_vel" to="nav_vel" />
        <param name="base_global_planner" value="$(arg base_global_planner)" />
        <param name="base_local_planner" value="$(arg base_local_planner)" />
        <rosparam file="$(find zeus_nav)/config/planner.yaml" command="load" />
        <rosparam file="$(find zeus_nav)/config/costmap_common.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find zeus_nav)/config/costmap_common.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find zeus_nav)/config/costmap_local.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find zeus_nav)/config/costmap_global.yaml" command="load" ns="global_costmap" />
    </node>

</launch>